<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <RollForward>LatestMajor</RollForward>
        <NoWarn>$(NoWarn);CA1724;CA1308;CS1591;</NoWarn>
        <AssemblyName>Microsoft.KernelMemory.MemoryDb.Chroma</AssemblyName>
        <RootNamespace>Microsoft.KernelMemory.MemoryDb.Chroma</RootNamespace>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.KernelMemory.Abstractions" Condition="'$(SolutionName)' != 'KernelMemoryDev'"/>
        <ProjectReference Include="..\..\..\service\Abstractions\Abstractions.csproj" Condition="'$(SolutionName)' == 'KernelMemoryDev'"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="System.Linq.Async"/>
    </ItemGroup>

    <Import Project="../../../code-analysis.props"/>

    <Import Project="../../../nuget-package.props"/>

    <PropertyGroup>
        <IsPackable>false</IsPackable>
        <PackageId>Microsoft.KernelMemory.MemoryDb.Chroma</PackageId>
        <Product>Chroma connector for Kernel Memory</Product>
        <Description>Chroma connector for Microsoft Kernel Memory, to store and search memory using Chroma vector indexing and Chroma features.</Description>
        <PackageTags>Memory, RAG, Kernel Memory, Chroma, HNSW, AI, Artificial Intelligence, Embeddings, Vector DB, Vector Search, ETL</PackageTags>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\README.md" Link="README.md" Pack="true" PackagePath="." Visible="false"/>
    </ItemGroup>

</Project>
